<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Sliding Panel -->

    <LinearLayout
        android:id="@+id/slidingPanel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F2F2F2"
        android:gravity="left"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#6B8F24"
            android:clickable="false"
            >

            <ImageView
                android:id="@+id/menuViewButton"
                android:layout_width="36dip"
                android:layout_height="36dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:src="@drawable/icon_menu"
                android:visibility="visible" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Address_book"
                android:textColor="@color/white"
                android:textSize="10pt" />

            <!--
                    <ImageView
					android:id="@+id/shadow_img"
					android:layout_width="fill_parent"
					android:contentDescription="@null"
					android:layout_height="0.5dip"
					android:layout_below="@+id/title"
					android:layout_alignParentBottom="true"
					android:layout_marginTop="0dp"
					android:background="@drawable/topbar_shadow" />
            -->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/grey"
          >

         <!--    <ImageView
                android:id="@+id/shadow_img"
                android:layout_width="fill_parent"
                android:layout_height="5dip"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/header"
                android:layout_marginTop="0dp"
                android:background="@drawable/topbar_shadow"
                android:contentDescription="@null" /> -->

            <!--
             <ImageView
             android:id="@+id/lrg_spinner"
		        android:contentDescription="@null"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_marginLeft="10dip"
		        android:layout_marginRight="10dip"
		        android:layout_marginTop="30dp"
		        android:focusable="false"
		        android:scaleType="fitXY"
		        android:src="@drawable/search_line" />
            -->

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:cursorVisible="false"
                android:inputType="text"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/add_search"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignRight="@+id/edt_search"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="3dp"
                android:contentDescription="@null"
                android:focusable="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

